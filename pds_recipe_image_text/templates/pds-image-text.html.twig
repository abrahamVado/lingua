{# //1.- Attach the required styles for the image + text component #}
{{ attach_library('pds_recipe_image_text/educacion') }}

{# //2.- Normalize the image position option to either "left" or "right" #}
{% set pos = image_position|default('left') in ['left','right'] ? image_position : 'left' %}

{# //3.- Output the component structure with optional fields #}
<section class="principal-image-text principal-image-text--image-{{ pos }}">
  <div class="container">
    <div class="principal-row-container">

      <div class="image-column">
        <div class="img-area">
          <img
            src="{{ image_src }}"
            alt="{{ image_alt|default('') }}"
            loading="lazy"
            decoding="async"
          >
        </div>
      </div>

      <div class="text-column">
        {% if header %}<h2>{{ header }}</h2>{% endif %}
        {% if description %}<p>{{ description }}</p>{% endif %}
        {% if button_url and button_text %}
          <div class="button-area">
            <a href="{{ button_url }}" class="principal-button">{{ button_text }}</a>
          </div>
        {% endif %}
      </div>

    </div>
  </div>
</section>
