{#
  Theme hook: pds_fondos
  Vars:
  - title: string
  - subtitle: string
  - fondos: [
      {
        url: string,
        icon_src: string,     # absolute or theme-relative
        icon_alt: string,
        name: string,
        desc: string,
        arrow_src: string,    # optional
        arrow_alt: string     # optional
      },
      ...
    ]
#}

{{ attach_library('pds_fondos/fondos') }}

<section class="principal_modulo_conoce_fondos_mutuos">
  <div class="principal-container">
    <div class="principal-titles-area">
      <h2>{{ title }}</h2>
      {% if subtitle %}
        <p>{{ subtitle }}</p>
      {% endif %}
    </div>

    <div class="principal-fondos-area">
      {% for f in fondos %}
        <a href="{{ f.url|default('#') }}">
          <div class="principal-fondo">
            <div class="principal-fondo-icon-area">
              <img src="{{ f.icon_src }}" alt="{{ f.icon_alt|default('') }}">
            </div>
            <div class="principal-fondo-description-area">
              <h3>{{ f.name }}</h3>
              <p>{{ f.desc }}</p>
            </div>
            <div class="principal-fondo-button-area">
              {% if f.arrow_src %}
                <img src="{{ f.arrow_src }}" alt="{{ f.arrow_alt|default('') }}">
              {% endif %}
            </div>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</section>
