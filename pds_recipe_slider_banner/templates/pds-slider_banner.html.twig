{#
  Theme hook: pds_hero
  Vars expected:
  - modifier_class: string (optional, e.g. 'principal_hero--gradient-dark')
  - slides: [
      {
        desktop_src: string,
        mobile_src: string,
        alt: string,
        title_html: string,   # HTML allowed
        intro: string,
        cta_label: string,
        cta_url: string
      }, ...
    ]
#}
{{ attach_library('pds_hero/hero') }}

<section class="principal_hero {{ modifier_class|default('principal_hero--gradient-dark') }}" aria-label="{{ 'Promociones destacadas'|t }}">
  <div class="principal_hero__slider" id="principalHero">
    {% for s in slides %}
      <article class="principal_hero__slide">
        <picture class="principal_hero__bg">
          <source media="(min-width: 768px)" srcset="{{ s.desktop_src }}">
          <img class="principal_hero__bgImg" src="{{ s.mobile_src }}" alt="{{ s.alt }}">
        </picture>

        <div class="principal_hero__inner">
          <div class="principal_hero__content">
            <h1 class="principal_hero__title">{{ s.title_html|raw }}</h1>
            <p class="principal_hero__intro">{{ s.intro }}</p>
            <div class="principal_hero__cta">
              <a class="principal_btn principal_btn--primary" href="{{ s.cta_url }}">{{ s.cta_label }}</a>
            </div>
          </div>
        </div>
      </article>
    {% endfor %}
  </div>

  <button class="principal_hero__arrow principal_hero__arrow--prev" aria-label="{{ 'Anterior'|t }}" type="button">
    <span class="principal_hero__icon" data-dir="prev" aria-hidden="true"></span>
  </button>
  <button class="principal_hero__arrow principal_hero__arrow--next" aria-label="{{ 'Siguiente'|t }}" type="button">
    <span class="principal_hero__icon" data-dir="next" aria-hidden="true"></span>
  </button>
</section>
