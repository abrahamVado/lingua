{#
  Expects variables:
  - eyebrow: string
  - headline: string
  - description: string
  - primary_button_url: string
  - primary_button_label: string
  - doc_icon_url: string
  - doc_link_url: string
  - doc_link_label: string
  - document_url: string
#}
{{ attach_library('pds_recipe_hero_banner_gradient/educacion') }}

<section class="principal-hero-banner-gradient">
  <div class="container">
    <div class="principal-row-container">
      <div class="hero-content">
        {% if eyebrow %}<h3>{{ eyebrow }}</h3>{% endif %}
        {% if headline %}<h2>{{ headline }}</h2>{% endif %}
        {% if description %}<p>{{ description }}</p>{% endif %}

        <div class="buttons-area">
          {% if primary_button_url and primary_button_label %}
            <div class="button-area">
              <a class="principal-button-inverted" href="{{ primary_button_url }}">{{ primary_button_label }}</a>
            </div>
          {% endif %}

          {% set has_doc_link = doc_link_url and doc_link_label %}
          {% if has_doc_link or document_url %}
            <div class="button-area">
              {% if document_url %}
                <div class="img-area">
                  <img src="{{ document_url }}" alt="" loading="lazy" decoding="async">
                </div>
              {% endif %}
              {% if has_doc_link %}
                <a class="principal-link principal-link--subtle principal-link--inverted" href="{{ doc_link_url }}">
                  {{ doc_link_label }}
                </a>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>
